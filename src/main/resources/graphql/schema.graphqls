scalar Long

type Query {
    # 상품 조회
    productByCode(productCode: Long!) : Product

    # 상품리스트 조회
    products : [Product]

    # 상품평 조회
    reviewByProductCode(code: Long) : Review
}

type Mutation {
    # 상품 입력
    insertProduct(input : ProductInput) : Boolean
    # 상품 삭제
    deleteProduct(code: Long!) : Boolean

    # 상품평 입력
    insertReview(input : ReviewInput) : Boolean
    # 상품평 삭제
    deleteReview(code: Long!) : Boolean
}
